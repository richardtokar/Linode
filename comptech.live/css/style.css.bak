/* General styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background-image: url("https://comptech.live/images/hero.jpg");
  background-size: cover;
  background-position: center;
}

/* About section styles */
.about {
  background: rgba(0, 0, 21, 0.7); /* Dark background with transparency */
  color: #fff;
  padding: 40px 20px;
  text-align: center;
}

.about-title {
  font-weight: 800;
  text-transform: uppercase;
  font-size: 6vw; /* Responsive font size */
  color: orange;
  margin-bottom: 20px;
}

.about-text {
  font-size: 1.2em;
  margin-bottom: 20px;
}

.social {
  margin-top: 20px;
}

.social p {
  margin-bottom: 10px;
  color: #fff; /* Make text white */
}

.social a {
  color: red; /* Red for the YouTube icon */
  font-size: 24px;
  text-decoration: none;
  display: inline-block;
  text-align: center;
}

.social a:hover {
  color: #f00; /* Red on hover */
}

.social .youtube-icon {
  font-size: 40px; /* Make the icon larger */
  display: block;
  margin: 0 auto; /* Center the icon */
}

/* Link text styling in the social section */
.social a span {
  color: #00f; /* Standard blue for the text */
}

.social a:hover span {
  color: #f00; /* Red for text on hover */
}

.social a:active span {
  color: #00a; /* Darker blue for text when clicked */
}

/* YouTube Section styles */
.youtube-info {
  background-color: #000; /* Matches the background color of the site sections */
  color: #fff; /* White text */
  padding: 40px 20px;
  text-align: center;
}

.youtube-info h4 {
  margin-bottom: 15px;
  font-size: 2em; /* Larger font size for the heading */
  color: orange; /* Use orange to match the design */
}

.youtube-info p {
  margin-bottom: 20px;
  font-size: 1.2em; /* Slightly larger text for readability */
}

.youtube-info a {
  color: #fff; /* White text for the link */
  text-decoration: none;
  font-size: 1.2em; /* Slightly larger font size for emphasis */
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.youtube-info a:hover {
  color: #f00; /* Red text on hover */
}

.youtube-info a:active {
  color: #00a; /* Darker blue text when clicked */
}

.youtube-info .youtube-icon {
  font-size: 40px; /* Consistent icon size */
  margin-right: 10px; /* Space between icon and text */
}

.youtube-info span {
  color: #fff; /* White text for the description */
}

/* Sites section styles */
#sites-section {
  background-color: #000;
  color: #fff;
  padding: 20px;
  text-align: center;
}

.title {
  margin-top: 0;
  font-size: 2em;
}

.sites {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20px;
}

.site-list {
  text-align: center;
  margin: 10px;
  flex-basis: calc(33.333% - 20px); /* 3 items per row on large screens */
}

.site-list img {
  width: 100%;
  max-width: 80px;
  height: auto;
  margin-bottom: 10px;
}

/* Footer styles */
footer {
  background-color: #333; /* Dark background */
  color: #fff; /* White text */
  padding: 20px;
  text-align: center;
}

footer h4 {
  margin-bottom: 20px;
  font-size: 1.5em;
}

.footer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 20px;
}

.footer-item {
  max-width: 300px;
}

.footer-item h5 {
  margin: 0 0 10px;
}

.footer-item p,
.footer-item a {
  margin: 0;
  color: #fff; /* White text */
  text-align: center;
}

.footer-item a {
  text-decoration: none;
  color: #00f; /* Standard link color */
}

.footer-item a:hover {
  color: #f00; /* Color on hover */
}

.footer-item a:active {
  color: #00a; /* Color when clicked */
}

.footer-item a {
  display: inline-block;
  text-align: center;
}

/* Responsive Styles */
@media (max-width: 768px) {
  .about-title {
    font-size: 8vw;
  }

  .about {
    padding: 20px 10px;
  }

  .site-list {
    flex-basis: calc(50% - 20px); /* 2 items per row on medium screens */
  }
}

@media (max-width: 480px) {
  .about-title {
    font-size: 10vw;
  }

  .about {
    padding: 20px 10px;
  }

  .site-list {
    flex-basis: 100%; /* 1 item per row on small screens */
  }

  .footer-content {
    text-align: center; /* Ensures the footer content is centered on small screens */
  }

  .footer-item a {
    display: block;
    text-align: center; /* Centers the link on small screens */
  }
}
